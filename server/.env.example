# Database Configuration (Local or AWS RDS)
DB_HOST=localhost
# For AWS RDS, use: your-db.xxxx.us-east-1.rds.amazonaws.com
DB_USER=root
DB_PASSWORD=your_password
DB_NAME=enderase_db
DB_PORT=3306

# JWT Secret
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# Frontend URL (for CORS and email links)
FRONTEND_URL=http://localhost:3000
# For production: https://www.enderase.com

# Server Port
PORT=4000

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# AWS S3 Configuration (for bid documents)
AWS_S3_BUCKET=enderase-bid-documents

# AWS SES Configuration (for email notifications)
SES_FROM_EMAIL=noreply@enderase.com
# Note: This email must be verified in AWS SES console

# Optional: Email notification recipients (comma-separated)
NOTIFICATION_EMAILS=customer1@example.com,customer2@example.com

# Optional: File upload limits
MAX_FILE_SIZE_MB=10

# Node Environment
NODE_ENV=development
# For production: production
